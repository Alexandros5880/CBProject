@model CBProject.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}



<body>
    <h2>Account Profile</h2>
    <br />
    <hr />

    <div class="row">
        <div class="col-md-6">
            <img class="userImage" src="@Model.User.ImagePath" alt="Avatar" />
        </div>
        <div class="col-md-6">
            <p class="text-success">@ViewBag.StatusMessage</p>
            <div>
                <dl class="dl-horizontal">

                    <dt>                       
                    </dt>
                    <dd class="" style="text-align:center;">
                        @Html.ActionLink("Edit User", "Edit", "Users", new { id = Model.User.Id }, new { @class= "btn btn-secondary" })
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.Id)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.Id)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.UserName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.UserName)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.FirstName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.FirstName)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.LastName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.LastName)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.BirthDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.BirthDate)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.Street)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.Street)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.StreetNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.StreetNumber)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.PostalCode)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.PostalCode)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.PhoneNumber)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.Email)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.Email)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.NewsletterAcception)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.NewsletterAcception)
                    </dd>

                    <dt>
                        @Html.LabelFor(model => model.User.SubscriptionPackage)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.User.SubscriptionPackage)
                    </dd>

                    <dt>Password:</dt>
                    <dd>                        
                        @if (Model.HasPassword)
                        {
                            @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-secondary" })
                        }
                        else
                        {
                            @Html.ActionLink("Create", "SetPassword")
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    

     <style>

         .userImage {
             float: right;
             margin-top: 50px;
             margin-right: 50px;
         }

         body{
             text-align:center;
         }
    
         .profile-img {
             text-align: left;
         }
    
             .profile-img img {
                 width: 50%;
                 height: 50%;
             }
    
             @*.profile-img .file {
                 position: relative;
                 overflow: hidden;
                 width: 50%;
                 border: none;
                 border-radius: 0;
                 font-size: 15px;
                 background: #212529b8;
             }
    
                 .profile-img .file input {
                     position: absolute;
                     opacity: 0;
                     right: 0;
                     top: 0;
                 }*@

     </style>

</body>

