@model CBProject.Models.ViewModels.VideoViewModel

@{
    ViewBag.Title = "MyVideos";
}

<h2>MyVideos</h2>

<p>
    
    @Html.ActionLink("Upload a new Video", "UploadVideo")

</p>
<table class="table">
    <tr>
        <th>            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video.UploadDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video.Url)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Videos) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VideoImage)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UploadDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
