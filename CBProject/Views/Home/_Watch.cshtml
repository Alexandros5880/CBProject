<div class="modal-header">
    <h5 class="modal-title">@Model.Title</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="embed-responsive embed-responsive-16by9">
        <video class="embed-responsive-item myvideo" controls preload="none" poster="@Model.Thumbnail" style="width:100%;" controlsList="nodownload">
            <source src="@Model.VideoPath" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>