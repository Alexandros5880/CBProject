@model CBProject.Models.ViewModels.HomeViewModel
@using CBProject.HelperClasses



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section fullWidth{

    <div class="row">
        <div class="col-md-7 col-sm-7 col-sm-offset-1 col-md-offset-1 col-xs-12 col-xs-offset-1 text">
            <p id="home-big-title">What do you want to learn todaty?</p>
            <br />
            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry.</p>
            <br />
            <div class="row">
                <div class="col-md-6 col-sm-7 col-xs-8 home-search-bar">
                    <input id="search-input" type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                           aria-describedby="search-addon" />
                </div>
                <div class="col-md-4 ">
                    <button onclick="searchClick()" type="button" class="btn btn-search ">Search</button>
                </div>
                <script>
                    function searchClick(){
                        var searchValue = $("#search-input").val();
                        $.ajax({    //create an ajax request to display.php
                            type: "GET",
                            url: "/api/Products?search=" + searchValue,
                            success: function (response) {
                                var data = response
                                //console.log(data.videos);
                                if (data) {
                                    $("#videos-home").empty();
                                    $("#ebooks-home").empty();

                                    data.videos.forEach(video => {
                                        console.log(video);
                                        $("#videos-home").append(
                                            `
                                            <div class="col-md-3 " id="ourHolder" data-item="${video.category}">
                                                <div class="card item" id="card-video">
                                                    <div style="width:100%; text-align:center; margin-top: 5%;">
                                                        <img alt="Cover Foto" src="${video.videoImagePath}" style="height:150px;" />
                                                        <h4 style="margin-top: 5%;">${video.title}</h4>
                                                    </div>
                                                    <div class="card-body text-center">
                                                        <p class="card-text"> ${video.description} </p>
                                                        <p class="card-text"> ${video.title}  </p>
                                                        <br />
                                                        <a href="#" class="btn btn-card">More</a>
                                                    </div>
                                                </div>
                                            </div>
                                            `
                                        );
                                    });

                                    data.ebooks.forEach(ebook => {
                                        console.log(ebook);
                                        $("#ebooks-home").append(
                                            `
                                            <div class="col-md-3 " id="ourHolder" data-item="${ebook.category}">
                                                <div class="card item" id="card-ebook">
                                                    <div style="width:100%; text-align:center; margin-top: 5%;">
                                                        <img alt="Cover Foto" src="${ebook.ebookImagePath}" style="height:150px;" />
                                                        <h4 style="margin-top: 5%;">${ebook.title}</h4>
                                                    </div>
                                                    <div class="card-body text-center">
                                                        <p class="card-text"> ${ebook.ebookImagePath} </p>
                                                        <p class="card-text"> ${ebook.title}  </p>
                                                        <br />
                                                        <a href="#" class="btn btn-card">More</a>
                                                    </div>
                                                </div>
                                            </div>
                                            `
                                        );
                                    });
                                }
                            }
                        });
                    }
                </script>
            </div>
        </div>
        <div class="col-md-4 col-sm-4 bigImage">
            <img src="~/assets/images/home/codeme_bigImg1_index2-half.jpg" class="img-fluid" alt="Responsive image" style="width:100%">
        </div>
    </div>
}



