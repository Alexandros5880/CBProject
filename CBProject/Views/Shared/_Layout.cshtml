                        <p>loremmejnnce oeve</p>
                        <p>loremmejnnce oeve</p>
                        <p>loremmejnnce oeve</p>
                    </div>
                    <div class="col-md-2">
                        <p><b>Social</b></p>
                        <p>loremmejnnce oeve</p>
                        <p>loremmejnnce oeve</p>
                        <p>loremmejnnce oeve</p>
                    </div>
                </div>
            </div>
            <p style="text-align:center">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            <br />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>