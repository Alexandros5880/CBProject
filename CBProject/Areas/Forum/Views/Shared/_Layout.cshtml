                    <li>5</li>*@
                </ul>
                @{ Html.RenderPartial(Url.Content("~/Views/Shared/_LoginPartial.cshtml"), Request.Url.AbsoluteUri); }
            </div>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <footer>
            <div class="container">
                <div class="row footer-row">

                </div>
            </div>
            <p style="text-align:center;margin-top:3%;">&copy; @DateTime.Now.Year - CodeMe Forum</p>
            <br />
        </footer>
    </div>


    @*<script type="text/javascript" src="https://code.jquery.com/jquery-3.1.1.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/DataTables")

    <script type="text/javascript" src="~/Scripts/Servicies.js"></script>

    @RenderSection("scripts", required: false)


